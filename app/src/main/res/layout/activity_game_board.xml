<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Player:"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/playername"
        app:layout_constraintEnd_toStartOf="@+id/playername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playername"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/gameBoard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gameBoard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:columnCount="3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player">

        <edu.oakland.tictactoe.GameButton
            android:id="@+id/button1"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_rect_filled"
            android:tag="1" app:index="1"/>

        <edu.oakland.tictactoe.GameButton
            android:id="@+id/button2"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_rect_filled"
            android:tag="2" app:index="2"/>

        <edu.oakland.tictactoe.GameButton
            android:id="@+id/button3"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_rect_filled"
            android:tag="3" app:index="3"/>

        <edu.oakland.tictactoe.GameButton
            android:id="@+id/button4"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_rect_filled"
            android:tag="1" app:index="4"/>

        <edu.oakland.tictactoe.GameButton
            android:id="@+id/button5"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_rect_filled"
            android:tag="2" app:index="5"/>

        <edu.oakland.tictactoe.GameButton
            android:id="@+id/button6"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_rect_filled"
            android:tag="3" app:index="6"/>

        <edu.oakland.tictactoe.GameButton
            android:id="@+id/button7"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_rect_filled"
            android:tag="1" app:index="7"/>

        <edu.oakland.tictactoe.GameButton
            android:id="@+id/button8"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_rect_filled"
            android:tag="2" app:index="8"/>

        <edu.oakland.tictactoe.GameButton
            android:id="@+id/button9"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_rect_filled"
            android:tag="3" app:index="9"/>

    </GridLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:text="START" android:background="@drawable/radio_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancel"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="CANCEL" android:background="@drawable/radio_bg"
        app:layout_constraintBottom_toBottomOf="@+id/start"
        app:layout_constraintEnd_toStartOf="@+id/reset"
        app:layout_constraintStart_toEndOf="@+id/start"
        app:layout_constraintTop_toTopOf="@+id/start"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="RESET" android:background="@drawable/radio_bg"
        app:layout_constraintBottom_toBottomOf="@+id/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel" />
</android.support.constraint.ConstraintLayout>